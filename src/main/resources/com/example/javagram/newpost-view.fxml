      <TextArea fx:id="txt_post" layoutX="339.0" layoutY="53.0" prefHeight="200.0" prefWidth="200.0" />
      <Button fx:id="btn_share" layoutX="416.0" layoutY="265.0" mnemonicParsing="false" onAction="#onActionShare" text="Share" />
      <Button fx:id="btn_profile" layoutX="514.0" layoutY="325.0" mnemonicParsing="false" onAction="#onActionProfile" text="Profile" />
      <Button fx:id="btn_refresh" layoutX="530.0" layoutY="14.0" mnemonicParsing="false" onAction="#onActionRefresh" text="Refresh" />
   </children>
</AnchorPane>
